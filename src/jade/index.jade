doctype html
html(lang='zh-Hans', data-ng-app='dockerfileEditor')
  head
    meta(charset='UTF-8')
    title Dockerfile 在线编辑器
    link(rel='stylesheet', href='main.css')
    script(src='main.js')
    | <!--[if lte IE 9]> <script src="js/ie.js" ></script> <![endif]-->
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='keywords', content='docker, dockerfile')
    link(rel='icon', type='image/png', href='favicon-256x256.png', sizes='256x256')
    link(rel='icon', type='image/png', href='favicon-128x128.png', sizes='128x128')
    link(rel='icon', type='image/png', href='favicon-96x96.png', sizes='96x96')
    link(rel='icon', type='image/png', href='favicon-72x72.png', sizes='72x72')
    link(rel='icon', type='image/png', href='favicon-64x64.png', sizes='64x64')
    link(rel='icon', type='image/png', href='favicon-48x48.png', sizes='48x48')
    link(rel='icon', type='image/png', href='favicon-32x32.png', sizes='32x32')
    link(rel='icon', type='image/png', href='favicon-24x24.png', sizes='24x24')
    link(rel='icon', type='image/png', href='favicon-16x16.png', sizes='16x16')
  body
    .app
      .ui.fixed.inverted.main.xlarge.menu
        .ui.page.grid
          .sixteen.wide.column
            .title.item
              b Dockerfile 在线编辑器
      .editor(data-ng-controller='Editor')
        .ui.two.column.middle.aligned.relaxed.fitted.stackable.page.grid
          .column
            .segment
              p
                .ui.left.viz.input
                  .ui.label 源镜像
                  i.di.di-docker-plain.icon
                  input(placeholder='ubuntu', type='text', style='width: 240px')
                  i.fa.fa-tag.icon
                  input(placeholder='latest', type='text')
              p
                .ui.primary.button(data-ng-click='test()') Angular Test Button
          .ui.vertical.divider
            i.fa.fa-arrow-right.icon
          .center.aligned.column
            .segment
              i.di.di-docker-plain.icon
              | test

